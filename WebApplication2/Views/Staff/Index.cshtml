@model IEnumerable<WebApplication2.Models.Entity6.Trainees>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mt-2">

    <div class="col-8">
        <form>
            <h2>View All trainee</h2>
            
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Edit</th>
                        <th scope="col">Delete</th>
                    </tr>
                </thead>
                @foreach (var a in Model)
                {
                    <tbody id="myTable">
                        <tr>
                            <td scope="row">@Html.DisplayFor(model => a.Id)</td>
                            <td>@Html.DisplayFor(model => a.Name)</td>
                            <td>
                                <a href="@Url.Action("EditTrainee", new {id = a.Id })">
                                    <button type="button" class="btn btn-primary mb-2">View detail</button>
                                </a>
                            </td>
                            <td>
                                <a href="@Url.Action("deleteTrainee", new {id = a.Id })">
                                    <button type="button" class="btn btn-primary mb-2">delete</button>
                                </a>
                            </td>
                        </tr>
                    </tbody>

